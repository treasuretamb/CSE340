<h1><%= title %></h1>
<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
  <% errors.array().forEach(error => { %>
    <li><%= error.msg %></li>
  <% }) %>
  </ul>
<% } %>

<form action="/inv/add-classification" method="post" class="user-form">
  <label for="classification_name">Classification Name</label>
  <span class="hint">(Alphanumeric only, no spaces)</span>
  <input type="text" name="classification_name" id="classification_name" required pattern="^[a-zA-Z0-9]+$" value="<%= locals.classification_name %>">
  
  <input type="submit" value="Add Classification">
</form>